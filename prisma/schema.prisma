generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id      String    @id @default(uuid())
  name    String
  User    User[]
  Project Project[]
}

model User {
  id             String       @id @default(uuid())
  email          String       @unique
  name           String?
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
}

model Project {
  id             String       @id @default(uuid())
  name           String
  url            String
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  Job            Job[]
}

enum JobStatus {
  PROVISIONED
  STARTED
  RUNNING
  FINISHED
  DEPROVISIONED
}

model Job {
  id         String    @id @default(uuid())
  ref        String
  cmd        String
  instanceId String
  status     JobStatus
  project    Project   @relation(fields: [projectId], references: [id])
  projectId  String
}
